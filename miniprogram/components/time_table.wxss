/* components/time_table.wxss */

.table {
  display: table;
  table-layout:fixed;
  width: 100%;
  /* border-collapse 属性设置表格的边框是否被合并为一个单一的边框，解决相邻单元格边框未合并导致有些边框变粗的视觉效果 */
  border-collapse: collapse;
  overflow-x: hidden;
  font-size: 32rpx;
  line-height: 32rpx;
  border: 1rpx solid #ddd;
}

.table .thead {
  display: table-header-group;
  top: 0;
}
.table .tbody {
  display: table-row-group;
  overflow-y: scroll
}

.table .tr {
  display: table-row;
}

.table .th {
  display: table-cell;
  font-weight: bold;
  border: 1rpx solid #ddd;
  text-align: center;
  vertical-align: middle;
  background-color: #f5fafe;
  line-height: 48rpx;
  height: 48rpx;
}

.table .td {
  display: table-cell;
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  text-align: center;
  vertical-align: middle;
  height: 36rpx;
}
.table .td.expire{
  background-color: #f5f5f5;
}
.table .td.in_use{
  background-color: #fcf8e3;
}
.table .td.selected{
  background-color: #dfffd8;
}
.table .td.top{
  border-top: 1rpx solid #ddd;
}
.table .td.bottom{
  border-bottom: 1rpx solid #ddd;
}
.label_item{
  height: 32rpx;
  line-height: 32rpx
}
.label{
  width: 100rpx;
  background-color: #f5fafe;
}